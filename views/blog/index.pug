extends ../layout

block content
  ul
    each item in post
      li(style="margin-bottom: 15px;")
        | #[span(style="font-size: .7em;") #{item.date_formatted}]
        | #[br] #[a(href=item.url style="font-size: 1.2em") #{item.title}]
        | #[br] #{item.caption}

    else
      li error loading content
